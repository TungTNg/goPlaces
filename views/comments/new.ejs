<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Add New Comment to <%= restaurant.name %></h1>
    <div class="row">
        <div class="col-md-4 offset-md-4 mt-3">
            <form action="/goPlaces/restaurants/<%= restaurant._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block btn-lg" type="submit" value="Submit" />
                </div>
            </form>
            <a href="/goPlaces/restaurants">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>