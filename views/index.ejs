<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To GoRestaurants!</h1>
            <hr>
            <p>View our hand-picked restaurants from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/goPlaces/restaurants/new">Add New Restaurant</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Restaurants</h3>
        </div>
    </div>
    
    <div class="row text-center">
        <%  restaurants.forEach(function(restaurant) { %>
        <div class="col-lg-4 col-md-6 my-2">
            <div class="card">
                    <img class="card-img-top" src="<%= restaurant.image %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= restaurant.name %>
                        </h5>
                        <p>
                            <a class="btn btn-primary mt-2" href="/goPlaces/restaurants/<%= restaurant._id %>">More Info</a>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </div>
            </div>
        </div>
        <%  }); %>
    </div>
</div>
<% include partials/footer %>